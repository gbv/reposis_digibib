<?xml version="1.0" encoding="UTF-8"?>
<MyCoReWebPage>
    <section xml:lang="de" title="Willkommen bei der Digitalen Bibliothek">
        <div class="jumbotwo" id="bs-index-search">
          <div class="row">
            <div class="col-md-6" lang="de">
              <form action="{$WebApplicationBaseURL}servlets/solr/find?q={0}" class="navbar-form navbar-left pull-right" role="search">
                <input name="q" placeholder="Suche" class="form-control search-query" id="searchInput" type="text" />
                <button type="submit" class="btn btn-primary"><i class="fa fa-search"></i></button>
              </form>
              <p>
                Suche in <span id="doc_count">14.000</span> Dokumenten
              </p>
            </div>
          </div>
        </div>

        <script type="text/javascript" src="http://opensource.teamdf.com/number/jquery.number.js"></script>
        <script>
            $.ajax({
            type: "GET",
            url: "http://reposis-test.gbv.de/digibib/api/v1/search?q=objectType:mods AND state:published&amp;rows=0&amp;wt=json&amp;json.wrf=?",
            dataType: "jsonp",
            success: function (data) {
            $('#doc_count').number(data.response.numFound,0, ',', '.');
            },
            });
        </script>
    </section>
    <meta>
        <log lastEditor="administrator" date="2016-07-21" time="12:46"/>
    </meta>
</MyCoReWebPage>
