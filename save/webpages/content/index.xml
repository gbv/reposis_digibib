<?xml version="1.0" encoding="UTF-8"?>
<MyCoReWebPage>
    <section xml:lang="de" title="Willkommen bei der Digitalen Bibliothek">
        <div class="jumbotwo" id="bs-index-search" style="margin-top:50px;">
          <div class="row">
            <div class="col-md-9 col-md-offset-2" lang="de">
              <h1>
                Digitale Bibliothek <br />
                Der Publikationsserver der TU&#160;Braunschweig<sup>BETA</sup>
              </h1>
              <form action="../servlets/solr/find" id="bs-searchMainPage" class="form-inline" role="search" style="margin-top:30px;">
                <div class="input-group" style="width: 100%;">
                  <input name="condQuery" placeholder="Suche in 14.000 Dokumenten" class="form-control search-query" id="bs-searchInput" type="text" />
                  <div class="input-group-btn"><button type="submit" class="btn btn-primary"><i class="fa fa-search"></i></button></div>
                </div>
              </form>
            </div>
          </div>
        </div>

        <script type="text/javascript" src="../js/jquery.number.js"></script>
        <script>
            $.ajax({
            type: "GET",
            url: "../api/v1/search?q=objectType:mods AND state:published&amp;rows=0&amp;wt=json&amp;json.wrf=?",
            dataType: "jsonp",
            success: function (data) {
            $('#bs-searchInput').attr('placeholder', 'Suche in ' + $.number(data.response.numFound,0, ',', '.') + ' Dokumenten');
            },
            });
        </script>
    </section>
    <meta>
        <log lastEditor="administrator" date="2016-07-21" time="12:46"/>
    </meta>
</MyCoReWebPage>